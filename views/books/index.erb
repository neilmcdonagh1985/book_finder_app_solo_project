<h2>Book Inventory</h2>

<div id="book-wrapper">
  <% @books.each do |book| %>

  <div class="book">
    <p><a href="/books/<%= book.id %>"><%= book.title %></a></p>
  </div>

  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Author</th>
      <th>Number in Stock</th>
      <th>Buying Price</th>
      <th>Selling Price</th>
    </tr>
  </thead>
  <tbody>
      <% for book in @books %>
      <tr>
        <td><%= book.title %></td>
        <td><a href="/authors/<%= book.author_id %>"><%= book.find_author.format_name %></a></td>
        <td><%= book.amount_in_stock %></td>
        <td><%= book.buying_price %></td>
        <td><%= book.selling_price %></td>
      </tr>
      <% end %>
  </tbody>

</table>

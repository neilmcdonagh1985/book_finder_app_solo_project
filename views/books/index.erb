<h2>Book Inventory</h2>

<table>
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Author</th>
      <th>Number in Stock</th>
      <th>Buying Price</th>
      <th>Genre</th>
      <th>Selling Price</th>
    </tr>
  </thead>
  <tbody>
      <% for book in @books %>
      <tr>
        <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
        <td><a href="/authors/<%= book.author_id %>"><%= book.find_author.format_name %></a></td>
        <td class="<%= book.show_low_stock %>"><%= book.amount_in_stock %></td>
        <td><%= book.buying_price %></td>
        <td><%= book.genre %></td>
        <td><%= book.selling_price %></td>
      </tr>
      <% end %>
  </tbody>

</table>

<h2>Book Inventory</h2>

<div class="form-field">
  <label for="genre_select">Filter by Genre:</label>
  <select name="genre" id="genre_select">
    <% @bgenres.each do |genre| %>
    <option value=<%= genre.capitalize %>><%= genre.capitalize %></option>
    <% end %>
  </select>

  <form class="genre-button" action="/filter" method="get">
    <button type="submit" name="filter">Filter</button>

  </form>

</div>

<table>
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Author</th>
      <th>Number in Stock</th>
      <th>Buying Price</th>
      <th>Genre</th>
      <th>Selling Price</th>
    </tr>
  </thead>
  <tbody>
      <% for book in @books %>
      <tr>
        <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
        <td><a href="/authors/<%= book.author_id %>"><%= book.find_author.format_name %></a></td>
        <td class="<%= book.show_low_stock %>"><%= book.amount_in_stock %></td>
        <td><%= book.convert_buying_price_to_pounds %></td>
        <td><%= book.genre %></td>
        <td><%= book.convert_selling_price_to_pounds %></td>
      </tr>
      <% end %>
  </tbody>

</table>

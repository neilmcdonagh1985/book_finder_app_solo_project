<h2>Add Book to Product Range</h2>

<form action="/books" method="post" autocomplete="off">
  <div class="form-wrapper">

<div class="form-field">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" required/>
</div>

<div class="form-field">
  <label for="buying_price">Buying Price:</label>
  <input type="number" name="buying_price" id="buying_price" maxlength="3" required/>
</div>

<div class="form-field">
  <label for="selling_price">Selling Price:</label>
  <input type="number" id="result" type="hidden" value="">
  <input type="number" class="selling_price" id="selling_price" required/>
</div>

<div class="form-field">
  <label for="author_select">Select Author:</label>
  <select name="author_id" id="author_select">
    <% @authors.each do |author| %>
    <option value=<%= author.id %>><%= author.format_name %></option>
    <% end %>
  </select>
</div>

<div class="form-field">
  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" autocomplete="on" required/>
</div>

<div class="form-field">
  <label for="amount_in_stock">Amount in Stock:</label>
  <input type="number" name="amount_in_stock" id="amount_in_stock" required/>
</div>

<div class="form-field">
  <label for="year_of_publication">Year of Publication:</label>
  <input type="number" name="year_of_publication" id="year_of_publication" required/>
</div>

<div class="form_button">
  <input id="submit" type="submit" value="Add Book">
</div>


  </div>
</form>
